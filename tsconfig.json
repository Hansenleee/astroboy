{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017"],
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "outDir": "./dist"
  },
  "include": ["app", "config", "core", "loader", "plugins"]
}
